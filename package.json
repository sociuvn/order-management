{
  "name": "order-management",
  "version": "0.1.0",
  "description": "Order Management",
  "repository": {
    "type": "git",
    "url": "https://github.com/sociuvn/order-management"
  },
  "author": "Lam Ngoc Khuong",
  "license": "MIT",
  "bin": {
    "scmorder": "./dist/commands/cli.js"
  },
  "scripts": {
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run lint",
    "install-global": "npm run build && npm install -g ./",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "nodemon --inspect dist/server.js",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "cli": "OPENSSL_CONF=./openssl.cnf ts-node src/commands/cli.ts",
    "nodecli": "node --openssl-config=openssl.cnf dist/commands/cli.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "dependencies": {
    "body-parser": "1.20.2",
    "class-transformer": "0.5.1",
    "commander": "11.1.0",
    "compression": "1.7.4",
    "cross-fetch": "4.0.0",
    "dotenv": "16.3.1",
    "errorhandler": "1.5.1",
    "express": "4.18.2",
    "express-validator": "7.0.1",
    "lodash": "4.17.21",
    "node-fetch": "3.3.2",
    "reflect-metadata": "0.1.13",
    "winston": "3.11.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.5",
    "@types/bson": "4.2.0",
    "@types/chai": "4.3.11",
    "@types/compression": "1.7.5",
    "@types/concurrently": "7.0.0",
    "@types/errorhandler": "1.5.3",
    "@types/eslint": "8.44.8",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.10",
    "@types/lodash": "4.14.202",
    "@types/node": "18.19.0",
    "@types/supertest": "2.0.16",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "6.13.1",
    "chai": "4.3.10",
    "concurrently": "8.2.2",
    "eslint": "8.54.0",
    "jest": "29.7.0",
    "nodemon": "3.0.2",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
